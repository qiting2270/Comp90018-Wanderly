<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/my_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/kulim_park_bold"
                android:text="Neva"
                android:textColor="#3B5667"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_profile_setting"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/my_profile_name"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/setting_icon" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_name"
                app:srcCompat="@drawable/vector" />

            <TextView
                android:id="@+id/my_profile_tripNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/kulim_park"
                android:text="7 trips"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_name" />

            <TextView
                android:id="@+id/my_profile_friendNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kulim_park"
                android:text="55 friends"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_tripNum" />


            <TextView
                android:id="@+id/my_profile_editProfile"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#F2F2F2"
                android:fontFamily="@font/kulim_park"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_friendNum" />

            <TextView
                android:id="@+id/my_profile_shareProfile"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#F2F2F2"
                android:fontFamily="@font/kulim_park"
                android:gravity="center"
                android:text="Share Profile"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/my_profile_editProfile"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_friendNum" />

            <TextView
                android:id="@+id/my_profile_message"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/kulim_park"
                android:text="Ducimus unde eveniet. Consequatur voluptates nemo nam voluptatum omnis. Expedita perspiciatis laudantium. Quod eos quas nulla."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_message"
                app:srcCompat="@drawable/line_1" />

            <TextView
                android:id="@+id/my_profile_post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kulim_park"
                android:textSize="24sp"
                android:text="Posts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <TextView
                android:id="@+id/my_profile_addimagebtn"
                android:layout_width="68sp"
                android:layout_height="39sp"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ECB35E"
                android:fontFamily="@font/kulim_park"
                android:gravity="center"
                android:text="Select"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toEndOf="@+id/my_profile_post_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_profile_gridLayout"
                android:layout_margin="15dp"
                android:columnCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_profile_post_text">


<!--                <ImageView-->
<!--                    android:id="@+id/my_profile_post"-->
<!--                    android:layout_width="118dp"-->
<!--                    android:layout_height="118dp"-->
<!--                    android:layout_margin="5dp"-->
<!--                    tools:srcCompat="@tools:sample/avatars" />-->






            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menu_background"
            android:layout_width="324dp"
            android:layout_height="78dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/menu_background_darkblue" />

        <ImageView
            android:id="@+id/menu_button_selected"
            android:layout_width="73dp"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_background"
            app:layout_constraintEnd_toEndOf="@+id/menu_background"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="@+id/menu_background"
            app:layout_constraintTop_toTopOf="@+id/menu_background"
            app:layout_constraintVertical_bias="0.69"
            app:srcCompat="@drawable/menu_button_selected" />

        <ImageView
            android:id="@+id/menu_homebutton"
            android:layout_width="30dp"
            android:layout_height="27dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_background"
            app:layout_constraintEnd_toEndOf="@+id/menu_background"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="@+id/menu_background"
            app:layout_constraintTop_toTopOf="@+id/menu_background"
            app:layout_constraintVertical_bias="0.51"
            app:srcCompat="@drawable/icon_homebtn" />

        <ImageView
            android:id="@+id/menu_tripbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_background"
            app:layout_constraintEnd_toEndOf="@+id/menu_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/menu_homebutton"
            app:layout_constraintTop_toTopOf="@+id/menu_background"
            app:layout_constraintVertical_bias="0.55"
            app:srcCompat="@drawable/airplane_ticket" />

        <ImageView
            android:id="@+id/menu_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_tripbutton"
            app:layout_constraintEnd_toEndOf="@+id/menu_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/menu_tripbutton"
            app:layout_constraintTop_toTopOf="@+id/menu_tripbutton"
            app:srcCompat="@drawable/bookmark" />

        <ImageView
            android:id="@+id/menu_profile"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_background"
            app:layout_constraintEnd_toEndOf="@+id/menu_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/menu_bookmark"
            app:layout_constraintTop_toTopOf="@+id/menu_background"
            app:srcCompat="@drawable/icon_person" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Fixed Menu Bar -->


</RelativeLayout>
