<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addtrip_day1_inside_day_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kulim_park"
        android:text="Day 1 -"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addtrip_day1_inside_date_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kulim_park"
        android:text="03/01"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/addtrip_day1_inside_day_text"
        app:layout_constraintTop_toBottomOf="@+id/addtrip_day1_inside_day_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dining_icon" />

            <TextView
                android:id="@+id/addtrip_inside_stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/kulim_park"
                android:text="Indigo"
                android:textColor="#3B5667"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addtrip__day1_inside_add_stopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_trip_addstops"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:backgroundTint="#ECB35E"
                android:gravity="center"
                android:text="+"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_trip_addstop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/kulim_park"
                android:text="Add stops"
                android:textColor="#803B5667"
                android:textSize="15dp"

                app:layout_constraintBottom_toBottomOf="@+id/add_trip_addstops"
                app:layout_constraintStart_toEndOf="@+id/add_trip_addstops"
                app:layout_constraintTop_toTopOf="@+id/add_trip_addstops" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vertical_line" />


</androidx.constraintlayout.widget.ConstraintLayout>
