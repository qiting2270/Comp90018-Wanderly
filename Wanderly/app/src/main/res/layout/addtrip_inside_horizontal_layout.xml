<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addtrip_inside_date_text"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kulim_park"
        android:text="Day 1 - 03/01"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/addtrip_inside_date_text"
        app:layout_constraintTop_toBottomOf="@+id/addtrip_inside_date_text"
        app:srcCompat="@drawable/dining_icon" />

    <TextView
        android:id="@+id/addtrip_inside_stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/kulim_park"
        android:text="Indigo"
        android:textSize="15dp"
        android:textColor="#3B5667"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <TextView
        android:id="@+id/add_trip_addstops"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#ECB35E"
        android:gravity="center"
        android:text="+"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <TextView
        android:id="@+id/add_trip_addstop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/kulim_park"
        android:text="Add stops"
        android:textSize="15dp"
        android:textColor="#803B5667"

        app:layout_constraintBottom_toBottomOf="@+id/add_trip_addstops"
        app:layout_constraintStart_toEndOf="@+id/add_trip_addstops"
        app:layout_constraintTop_toTopOf="@+id/add_trip_addstops" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vertical_line" />

</androidx.constraintlayout.widget.ConstraintLayout>
