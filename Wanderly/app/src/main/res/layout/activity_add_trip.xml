<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddTripActivity">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />


        <TextView
            android:id="@+id/add_trip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/kulim_park"
            android:text="New Trip"
            android:textColor="#3B5667"
            android:textStyle="bold"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_trip_done"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#ECB35E"
            android:gravity="center"
            android:text="Done"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_trip_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/add_trip_text"
            app:layout_constraintTop_toTopOf="@+id/add_trip_text" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="366dp"
            android:layout_height="764dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_trip_text"
            app:srcCompat="@drawable/frame_add_trip" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:srcCompat="@drawable/baseline_location_pin_24" />

        <Spinner
            android:id="@+id/add_trip_spinner_wherefrom"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/spinner_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/imageView20" />

        <Spinner
            android:id="@+id/add_trip_spinner_whereTo"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            app:layout_constraintBottom_toBottomOf="@+id/add_trip_spinner_wherefrom"
            app:layout_constraintEnd_toEndOf="@+id/imageView18"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/add_trip_spinner_wherefrom"
            app:layout_constraintTop_toTopOf="@+id/add_trip_spinner_wherefrom" />


        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toBottomOf="@+id/imageView20"
            app:srcCompat="@drawable/clock_icon" />

        <TextView
            android:id="@+id/add_trip_departure_date"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/spinner_background"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Departure"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toEndOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView21" />

        <TextView
            android:id="@+id/add_trip_return_date"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Return"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_trip_departure_date"
            app:layout_constraintStart_toEndOf="@+id/add_trip_departure_date"
            app:layout_constraintTop_toTopOf="@+id/add_trip_departure_date" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

